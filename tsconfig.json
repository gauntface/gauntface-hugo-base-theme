{
    "compilerOptions": {
        "declaration": true,
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums":true,
        "outDir": "public",
        "sourceMap": true,

        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
    ],
    "exclude": [
        "*.config.js",
        "**/prism/pre-preload.js",
    ]
}